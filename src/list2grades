#!/bin/rc

rfork e
nquestions=3
fn listusers {
	awk '-F|' '
	/^#/	{ next }
	/^$/	{ next }
	$3 ~ /Operating Systems/ && $4 ~ /B/	{ print $2 }
	' $*
}

listusers $* | awk '
BEGIN	{	printf("%-30s\t", "Name");
		for (i = 0; i < '$nquestions'; i++)
			printf("Q-%d\t", i+1);
		printf("Total\n");
	}
	{	printf("%-30s\t", $0);
		for (i = 0; i < '$nquestions'; i++)
			printf("-\t", i+1);
		printf("-\n");
	}
'
exit ''
